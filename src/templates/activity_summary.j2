{% extends "base.html" %}
{% block title %}
    Activity Summary
{% endblock title %}
{% block head %}
    <link rel="stylesheet"
          href="{{ url_for('static', filename='css/summary.css') }}">
{% endblock head %}
{% block content %}
    <div class="card summary">
        <h1>{{ data.action.name }} - Last {{ data.days }} days</h1>
        <form method="get" class="summary-controls">
            {{ form.csrf_token }}
            <div>
                {{ form.action_id.label }}
                {{ form.action_id(onchange="this.form.submit()") }}
            </div>
            <div>
                {{ form.days.label }}
                {{ form.days(min="1", max="365") }}
            </div>
            <div>{{ form.submit(class="btn btn-primary") }}</div>
        </form>
        <canvas id="activityChart"></canvas>
        <a href="{{ url_for('action.list_actions') }}"
           class="btn btn-secondary back-link">‚Üê Back</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.5.1/dist/chart.umd.min.js"></script>
    <script>
        const ctx = document.getElementById('activityChart').getContext('2d');

        const labels = {{ data.labels|tojson }};
        const values = {{ data._values|tojson }};

        const chartData = {
            labels: labels,
            datasets: [
                {
                    label: 'Delta per day',
                    data: values,
                    fill: false,
                    borderColor: 'rgba(75, 192, 192, 1)',
                    backgroundColor: 'rgba(75, 192, 192, 0.5)',
                    tension: 0.3
                },
                {
                    label: 'Trend',
                    data: {{ data.trend_line|tojson }},
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 2,
                    fill: false,
                    pointRadius: 0
                }
            ]
        };

        new Chart(ctx, {
            type: 'line',
            data: chartData,
            options: {
                responsive: true,
                plugins: { legend: { display: true } },
                scales: {
                    x: { title: { display: true, text: 'Date' } },
                    y: { beginAtZero: true, title: { display: true, text: 'Delta count' } }
                }
            }
        });
    </script>
{% endblock content %}
