{% extends "base.html" %}
{% block title %}
    Dashboard
{% endblock title %}
{% block head %}
    <link rel="stylesheet"
          href="{{ url_for('static', filename='css/dashboard.css') }}">
{% endblock head %}
{% block content %}
    <form method="post" class="timeframe-form">
        {{ form.csrf_token }}
        <label for="days">{{ form.days.label }}</label>
        {{ form.days(size=3) }}
        {{ form.submit() }}
        {% for error in form.days.errors %}<span class="error">{{ error }}</span>{% endfor %}
    </form>
    <div class="dashboard-container">
        <!-- Summary Card -->
        <div class="card summary">
            <h3>Summary</h3>
            <ul>
                <li>
                    <strong>{{ activity_data|length }}</strong> activities tracked
                </li>
                <li>
                    <strong>{{ total_actions }}</strong> total actions ({{ period }})
                </li>
                <li>
                    <strong>{{ trend_change }}%</strong> change vs last period
                </li>
            </ul>
            <div class="chart-wrapper">
                <canvas id="summaryChart"></canvas>
            </div>
        </div>
        <h2>All Activity Trends</h2>
        <div class="activity-list">
            {% for activity in activity_data %}
                <div class="card activity">
                    <h3>{{ activity.name }}</h3>
                    <div class="chart-wrapper">
                        <canvas id="chart-{{ loop.index0 }}"></canvas>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock content %}
{% block scripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.5.1/dist/chart.umd.min.js"></script>
    <script>
// --- Summary Chart ---
const summaryLabels = {{ labels|tojson }};
const summaryValues = {{ values|tojson }};
const summaryCtx = document.getElementById('summaryChart').getContext('2d');

new Chart(summaryCtx, {
    type: 'bar',
    data: {
        labels: summaryLabels,
        datasets: [{
            label: 'Count',
            data: summaryValues,
            backgroundColor: 'rgba(54, 162, 235, 0.5)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: { y: { beginAtZero: true } }
    }
});

// --- Activity Trend Charts ---
const activityData = {{ activity_data | tojson }};
activityData.forEach((activity, index) => {
    const ctx = document.getElementById(`chart-${index}`).getContext('2d');
    const trendColor = activity.trend_line[activity.trend_line.length-1] >= activity.trend_line[0]
                       ? '#0d6efd'
                       : '#FFB300';

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: activity.labels,
            datasets: [
                {
                    label: 'Delta per day',
                    data: activity.values,
                    fill: false,
                    borderColor: '#2F9C95',
                    backgroundColor: 'rgba(75,192,192,0.2)',
                    tension: 0.3
                },
                {
                    label: 'Trend',
                    data: activity.trend_line,
                    fill: false,
                    borderColor: trendColor,
                    borderWidth: 2,
                    pointRadius: 0
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { display: true } },
            scales: {
                x: { title: { display: true, text: 'Date' } },
                y: { beginAtZero: true, title: { display: true, text: 'Delta count' } }
            }
        }
    });
});
    </script>
{% endblock scripts %}
