{% extends "base.html" %}
{% block title %}Edit Action{% endblock %}
{% block content %}
    <div class="form-container">
        <h1>Edit Action</h1>
        <form method="post">
            {{ form.csrf_token }}
            <div>
                {{ form.name.label }}
                {{ form.name(class="input-text") }}
                {% if form.name.errors %}
                    <div class="error">{{ form.name.errors[0] }}</div>
                {% endif %}
            </div>
            <div>
                {{ form.notes.label }}
                {{ form.notes(rows="4", class="input-textarea") }}
            </div>
            <div>
                {{ form.properties.label }}
                {{ form.properties(rows="6", class="input-textarea") }}
            </div>
            <div class="actions">
                {{ form.submit(class="btn btn-primary") }}
                <a href="{{ url_for('action.list_actions') }}" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
{% endblock %}
