{% extends "base.html" %}
{% block title %}Edit Activity{% endblock %}
{% block content %}
    <div class="form-container">
        <h1>Edit Activity</h1>
        <form method="post">
            <div>
                <label for="delta">Delta (amount)</label>
                <input type="number"
                       id="delta"
                       name="delta"
                       value="{{ log.delta }}"
                       step="any"
                       required>
            </div>
            <div>
                <label for="notes">Notes</label>
                <textarea id="notes" name="notes">{{ log.notes or "" }}</textarea>
            </div>
            <div>
                <label for="properties">Properties (JSON)</label>
                <textarea id="properties" name="properties">{{ log.properties or "" }}</textarea>
            </div>
            <button type="submit">Save Changes</button>
            <a href="{{ url_for('action.view_action_history', action_id=log.action_id) }}"
               class="cancel-link">Cancel</a>
        </form>
    </div>
{% endblock %}
