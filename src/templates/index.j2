{% extends "base.html" %}

{% block title %}Activity Tracker{% endblock %}

{% block content %}
<h1>Welcome {% if user %}{{ user.username }}{% else %}Guest{% endif %}</h1>
{% if user %}
    <a href="{{ url_for('auth.logout') }}">Logout</a>
{% else %}
    <a href="{{ url_for('auth.login') }}">Login</a> | 
    <a href="{{ url_for('auth.register') }}">Register</a>
{% endif %}
{% endblock %}
