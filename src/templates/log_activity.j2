{% extends "base.html" %}
{% block title %}Log {{ action.name }}{% endblock %}
{% block content %}
    <div class="form-container">
        <h1>Log Activity for {{ action.name }}</h1>
        <form method="post">
            <div>
                <label for="notes">Notes (optional):</label>
                <input type="text" id="notes" name="notes" placeholder="e.g. Easy morning run">
            </div>
            <div>
                <label for="delta">Delta (optional):</label>
                <input type="number" id="delta" name="delta" value="1" min="1">
            </div>
            <div>
                <label for="properties">Properties (optional, JSON format):</label>
                <input type="text"
                       id="properties"
                       name="properties"
                       placeholder='{"distance": "5km"}'>
            </div>
            <button type="submit">Log Activity</button>
        </form>
        <a href="{{ url_for('action.view_action_history', action_id=action.id) }}"
           class="cancel-link">‚Üê Back to {{ action.name }}</a>
    </div>
{% endblock %}
