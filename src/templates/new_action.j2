{% extends "base.html" %}
{% block title %}Create Action{% endblock %}
{% block content %}
    <div class="form-container">
        <h1>Create New Action</h1>
        <form method="post">
            <div>
                <label for="name">Name</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div>
                <label for="notes">Notes</label>
                <textarea id="notes" name="notes"></textarea>
            </div>
            <div>
                <label for="properties">Properties (JSON)</label>
                <textarea id="properties" name="properties" placeholder='{"distance": "km"}'></textarea>
            </div>
            <button type="submit">Create</button>
            <a href="{{ url_for("action.list_actions") }}" class="cancel-link">Back</a>
        </form>
    </div>
{% endblock %}
